{# Purpose of this template: Display collections within an external context #}
<dl>
    {% for collection in items %}
        <dt>{{ collection.getTitleFromDisplayPattern() }}</dt>
        {% if collection.description %}
            <dd>{{ collection.description|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('muvideomodule_collection_display', { 'id': collection.id }) }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
