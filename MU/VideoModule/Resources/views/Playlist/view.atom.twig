{# purpose of this template: playlists atom feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text">{{ __('Latest playlists') }}</title>
    <subtitle type="text">{{ __('A direct feed showing the list of playlists') }} - {{ getModVar('ZConfig', 'slogan') }}</subtitle>
    <author>
        <name>{{ getModVar('ZConfig', 'sitename') }}</name>
    </author>
{% set amountOfItems = items|length %}
{% if amountOfItems > 0 %}
{% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({ 'http://': '', '/': '' }) }},{{ items.first.createdDate|date('Y-m-d') }}:{{ path('muvideomodule_playlist_' ~ routeArea ~ 'display', { 'id': items.first.getId() }) }}{% endset %}
    <id>{{ uniqueID }}</id>
    <updated>{{ items[0].updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
{% endif %}
    <link rel="alternate" type="text/html" hreflang="{{ app.request.locale }}" href="{{ url('muvideomodule_playlist_' ~ routeArea ~ 'index') }}" />
    <link rel="self" type="application/atom+xml" href="{{ app.request.getSchemeAndHttpHost() ~ app.request.getBasePath() }}" />
    <rights>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.getSchemeAndHttpHost()|e }}</rights>
{% for playlist in items %}
    {{ block('entry') }}
{% endfor %}
</feed>
{% block entry %}
    <entry>
        {{ block('entry_content') }}
    </entry>
{% endblock %}
{% block entry_content %}
    <title type="html">{{ playlist|muvideomodule_formattedTitle|notifyFilters('muvideomodule.filterhook.playlists')|safeHtml }}</title>
    <link rel="alternate" type="text/html" href="{{ url('muvideomodule_playlist_' ~ routeArea ~ 'display', { 'id': playlist.getId() }) }}" />
    {% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({ 'http://': '', '/': '' }) }},{{ playlist.createdDate|date('Y-m-d') }}:{{ path('muvideomodule_playlist_' ~ routeArea ~ 'display', { 'id': playlist.getId() }) }}{% endset %}
    <id>{{ uniqueID }}</id>
    {% if playlist.updatedDate|default %}
        <updated>{{ playlist.updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
    {% endif %}
    {% if playlist.createdDate|default %}
        <published>{{ playlist.createdDate|date('Y-m-dTH:M:SZ') }}</published>
    {% endif %}
    {% if playlist.createdBy|default and playlist.createdBy.getUid() > 0 %}
        {% set creatorAttributes = playlist.createdBy.getAttributes() %}
        <author>
           <name>{{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(playlist.createdBy.getUname()) }}</name>
           <uri>{{ creatorAttributes.get('_UYOURHOMEPAGE')|default('-') }}</uri>
           <email>{{ playlist.createdBy.getEmail() }}</email>
        </author>
    {% endif %}
    <summary type="html">
        <![CDATA[
        {{ playlist.description|truncate(150, true, '&hellip;')|default('-') }}
        ]]>
    </summary>
    <content type="html">
        <![CDATA[
        {{ playlist.title|replace({ '<br>': '<br />' }) }}
        ]]>
    </content>
{% endblock %}
