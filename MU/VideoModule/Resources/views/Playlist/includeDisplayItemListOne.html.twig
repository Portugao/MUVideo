{# purpose of this template: inclusion template for display of related playlists #}
{% set hasAdminPermission = hasPermission('MUVideoModule:Playlist:', '::', 'ACCESS_EDIT') %}
{% if nolink is not defined %}
    {% set nolink = false %}
{% endif %}
<h4>
{% spaceless %}
{% if not nolink %}
    <a href="{{ path('muvideomodule_playlist_' ~ routeArea ~ 'display', { 'id': item.id }) }}" title="{{ item.getTitleFromDisplayPattern()|e('html_attr') }}">
{% endif %}
    {{ item.getTitleFromDisplayPattern() }}
{% if not nolink %}
    </a>
    <a id="playlistItem{{ item.id }}Display" href="{{ path('muvideomodule_playlist_' ~ routeArea ~ 'display', { 'id': item.id, 'raw': 1 }) }}" title="{{ __('Open quick view window') }}" class="muvideo-inline-window hidden" data-modal-title="{{ item.getTitleFromDisplayPattern()|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
{% endif %}
{% endspaceless %}
</h4>
