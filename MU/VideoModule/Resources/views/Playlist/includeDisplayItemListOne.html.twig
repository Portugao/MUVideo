{# purpose of this template: inclusion template for display of related playlists #}
{% set hasAdminPermission = hasPermission('MUVideoModule:Playlist:', '::', 'ACCESS_EDIT') %}
{% if noLink is not defined %}
    {% set noLink = false %}
{% endif %}
<h4>
{% spaceless %}
{% if not noLink %}
    <a href="{{ path('muvideomodule_playlist_' ~ routeArea ~ 'display', {'id': item.getId()}) }}" title="{{ item|muvideomodule_formattedTitle|e('html_attr') }}">
{% endif %}
    {{ item|muvideomodule_formattedTitle }}
{% if not noLink %}
    </a>
    <a id="playlistItem{{ item.getKey() }}Display" href="{{ path('muvideomodule_playlist_' ~ routeArea ~ 'display', {'id': item.getId(), raw: 1}) }}" title="{{ __('Open quick view window') }}" class="muvideo-inline-window hidden" data-modal-title="{{ item|muvideomodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
{% endif %}
{% endspaceless %}
</h4>
