{# purpose of this template: movies atom feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text">{{ __('Latest movies') }}</title>
    <subtitle type="text">{{ __('A direct feed showing the list of movies') }} - {{ getModVar('ZConfig', 'slogan') }}</subtitle>
    <author>
        <name>{{ getModVar('ZConfig', 'sitename') }}</name>
    </author>
{% set amountOfItems = items|length %}
{% if amountOfItems > 0 %}
{% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({ 'http://': '', '/': '' }) }},{{ items.first.createdDate|date('Y-m-d') }}:{{ path('muvideomodule_movie_' ~ routeArea ~ 'display', { 'id': items.first.id }) }}{% endset %}
    <id>{{ uniqueID }}</id>
    <updated>{{ items[0].updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
{% endif %}
    <link rel="alternate" type="text/html" hreflang="{{ app.request.locale }}" href="{{ url('muvideomodule_movie_' ~ routeArea ~ 'index') }}" />
    <link rel="self" type="application/atom+xml" href="{{ app.request.getSchemeAndHttpHost() ~ app.request.getBasePath() }}" />
    <rights>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.getSchemeAndHttpHost()|e }}</rights>
{% for movie in items %}
    {{ block('entry') }}
{% endfor %}
</feed>
{% block entry %}
    <entry>
        {{ block('entry_content') }}
    </entry>
{% endblock %}
{% block entry_content %}
    <title type="html">{{ movie.getTitleFromDisplayPattern()|notifyFilters('muvideomodule.filterhook.movies') }}</title>
    <link rel="alternate" type="text/html" href="{{ url('muvideomodule_movie_' ~ routeArea ~ 'display', { 'id': movie.id }) }}" />
    {% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({ 'http://': '', '/': '' }) }},{{ movie.createdDate|date('Y-m-d') }}:{{ path('muvideomodule_movie_' ~ routeArea ~ 'display', { 'id': movie.id }) }}{% endset %}
    <id>{{ uniqueID }}</id>
    {% if movie.updatedDate|default %}
        <updated>{{ movie.updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
    {% endif %}
    {% if movie.createdDate|default %}
        <published>{{ movie.createdDate|date('Y-m-dTH:M:SZ') }}</published>
    {% endif %}
    {% if movie.createdBy|default and movie.createdBy.getUid() > 0 %}
        {% set creatorAttributes = movie.createdBy.getAttributes() %}
        <author>
           <name>{{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(movie.createdBy.getUname()) }}</name>
           <uri>{{ creatorAttributes.get('_UYOURHOMEPAGE')|default('-') }}</uri>
           <email>{{ movie.createdBy.getEmail() }}</email>
        </author>
    {% endif %}
    <summary type="html">
        <![CDATA[
        {{ movie.description|truncate(150, true, '&hellip;')|default('-') }}
        ]]>
    </summary>
    <content type="html">
        <![CDATA[
        {{ movie.title|replace({ '<br>': '<br />' }) }}
        ]]>
    </content>
{% endblock %}
